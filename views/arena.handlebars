<section class="oppList">
    <h3>Pick Your Opponent!</h3>
        <section id="oppContainer">
        {{#each opponents as |opponent| }}
            <div class="opponent" data-id="{{opponent.id}}">
                <img class="renown" src="/images/bronzeBanner.png">
                <img class="oppImage" src="{{image_url}}" alt="{{name}}">
                <h4>{{name}}</h4>
                <div class="oppStats">                    
                    <p>Lv: {{level}}</p>
                    <p>Str: {{strength}}</p>
                    <p>Def: {{defense}}</p>
                    <p>Vit: {{vitality}}</p>
                </div>
            </div>
        {{/each}}
        </section>
    <button data-id="{{character_id}}" id="selectOpp">Select Opponent</button>
    <button data-id="{{character_id}}" id="returnTown">Return To Town</button>
</section>
<script src="/js/arena.js"></script>