<section class="combat-bg"></section>

<div id="battlefield">
    <div id="player" data-id="{{character.id}}">
        <div class="player-screen">
            <h4 class="name">{{character.name}}</h4>
            <div class="player-img">
                <img width="600px" height="500px" id="playerImg" src="{{character.image_url}}"></img>
            </div>
            <div class="healthBar">
                <p id="playerHpVal"></p>
                <div id="playerHPBar"></div>
            </div>
        </div>
    
        <div class="player-Btn">
            <button id="attackBtn">Attack</button>
            <button id="fleeBtn">Flee</button>
        </div>

    </div>

    <div id="monster" data-id="{{monster.id}}">
        <div class="monster-screen">
            <h4 class="name">{{monster.name}}</h4>
            <div id="monsterImg">
                <img width="600px" height="500px" id="monsterImg" src="{{monster.monster_url}}"></img>
            </div>
            <div class="healthBar">   
                <p id="monHpVal"></p>             
                <div id="monsterHPBar"></div>
            </div>
        </div>
        <div id="combatLog"></div>
    </div>
</div>



<footer>
 <p class="img-ref">Image by brgfx on Freepik</p> 
</footer>
<script src="/js/combatScreen.js"></script>
